<%- include('./partials/header.ejs') %>
<body>
    
    <form action="/register" method="post" class="container-1" autocomplete="off">
        <h1 class="h1-1-lg mb-20">My Books</h1>
        <div id="login-box" class="mb-30">
            <h2 class="h2-1-lg mb-30 align-center">Please enter your name, username and password</h2>
            <label for="name" class="text-1-lg">name</label>
            <input type="text" name="name" id="name" class="input-box" required>
            <label for="username" class="text-1-lg">username</label>
            <input type="text" name="username" id="username" class="input-box" required>
            <label for="password" class="text-1-lg">password</label>
            <input type="password" name="password" id="password" class="input-box" required>
        </div>
        <button class="btn-1 mb-20" type="submit">Sign Up</button>
        <a href="/auth/google" class="no-line"><button class="btn-1 mb-20 flex item-center justify-center gap-10" type="button">
            <img src="/images/google.svg" alt="" class="icons">
            Sign Up with Google
        </button></a>
    </form>
    
</body>
